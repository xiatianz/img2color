# 缓存配置
KV_ENABLE=true
KV_URL=redis://your-redis-host:6379
KV_REST_API_URL=https://your-redis-rest-api-url
KV_REST_API_TOKEN=your-redis-token
KV_REST_API_READ_ONLY_TOKEN=your-readonly-token

# 服务配置
PORT=8080
ALLOWED_REFERERS=*.ehon.cn,localhost:*,your-domain.com

# 示例配置（使用Upstash Redis）
# KV_ENABLE=true
# KV_URL=rediss://default:your-password@your-endpoint.upstash.io:6380
# KV_REST_API_URL=https://your-endpoint.upstash.io
# KV_REST_API_TOKEN=your-token
# KV_REST_API_READ_ONLY_TOKEN=your-readonly-token